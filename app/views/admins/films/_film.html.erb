<tr>
  <td><%= film.id %></td>
  <td><%= film.name %></td>
  <td><%= film.country %></td>
  <td class="text-center"><%= video_tag url_for(film.movie), controls: true if film.movie.attached? %></td>
  <td class="text-center"><%= video_tag url_for(film.trailer), controls: true if film.trailer.attached? %></td>
  <td class="text-center"><%= image_tag film.image if film.image.attached? %></td>
</tr>
